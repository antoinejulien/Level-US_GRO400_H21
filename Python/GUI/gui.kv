#: import NoTransition kivy.uix.screenmanager.NoTransition

<Label>
    halign: "center"
    valign: "middle"

<MenuButton@Button>
    font_size: 32

WindowManager:
    transition: NoTransition()
    MenuWindow:
    ManualWindow:
    AutoWindow:

<MenuWindow>
    name: "menu"

    canvas.before:
        BorderImage:
            source: "gui\\images\\background.jpg"
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint: (0.60, 0.60)
            pos_hint: {"x": 0.05, "top": 0.8}

            Label:
                text: "Choose the desired\noperation mode"
                font_size: 32

            MenuButton:
                text: "Manual"
                on_release: 
                    app.root.current = "manual_window"

            MenuButton:
                text: "Automatic"
                on_release: 
                    app.root.current = "auto_window"

<ManualWindow>
    name: "manual_window"

    canvas.before:
        BorderImage:
            source: "gui\\images\\background.jpg"
            pos: self.pos
            size: self.size
    
    FloatLayout:
        size: root.width, root.height

        Label:
            text: "Manual mode"
            font_size: 32
            size_hint: (1, 0.1)
            pos_hint: {"left": 1, "top": 1}

        Button:
            text: "Menu"
            size_hint: (None, None)
            size: (75,25)
            pos_hint: {"left": 1, "bottom": 1}
            on_release: 
                app.root.current = "menu"

<AutoWindow>
    name: "auto_window"

    canvas.before:
        BorderImage:
            source: "gui\\images\\background.jpg"
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            text: "Automatic mode"
            font_size: 32
            size_hint: (1, 0.1)
            pos_hint: {"left": 1, "top": 1}

        Button:
            text: "Menu"
            size_hint: (None, None)
            size: (75,25)
            pos_hint: {"left": 1, "bottom": 1}
            on_release: 
                app.root.current = "menu"