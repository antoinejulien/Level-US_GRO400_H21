#: import NoTransition kivy.uix.screenmanager.NoTransition

<Label>
    font_size: 32
    halign: "center"
    valign: "middle"

<MenuButton@Button>
    font_size: 32

<ManualButton@Button>
    font_size: 32

WindowManager:
    transition: NoTransition()
    MenuWindow:
    ManualWindow:
    AutoWindow:

<MenuWindow>
    name: "menu"

    canvas.before:
        BorderImage:
            source: "GUI\\images\\background.jpg"
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint: (0.60, 0.60)
            pos_hint: {"x": 0.05, "top": 0.8}

            Label:
                text: "Choose the desired\noperation mode"

            MenuButton:
                text: "Manual"
                on_release: 
                    app.root.current = "manual_window"

            MenuButton:
                text: "Automatic"
                on_release: 
                    app.root.current = "auto_window"

<ManualWindow>
    name: "manual_window"

    status:status

    canvas.before:
        BorderImage:
            source: "GUI\\images\\background.jpg"
            pos: self.pos
            size: self.size
    
    FloatLayout:
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint: (0.425, 0.75)
            pos_hint: {"x": 0.05, "top": 0.875}

            ManualButton:
                text: "High"
                on_release: 
                    root.high()

            ManualButton:
                text: "Middle"
                on_release: 
                    root.mid()

            ManualButton:
                text: "Low"
                on_release: 
                    root.low()

        Label:
            id: status
            text : "Status"
            size_hint: (0.425, 0.75)
            pos_hint: {"x": 0.525, "top": 0.875}


        Label:
            text: "Manual mode"
            size_hint: (1, 0.1)
            pos_hint: {"left": 1, "top": 1}

        Button:
            text: "Menu"
            font_size: 16
            size_hint: (None, None)
            size: (75,25)
            pos_hint: {"left": 1, "bottom": 1}
            on_release: 
                app.root.current = "menu"

<AutoWindow>
    name: "auto_window"

    canvas.before:
        BorderImage:
            source: "GUI\\images\\background.jpg"
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            text: "Automatic mode"
            size_hint: (1, 0.1)
            pos_hint: {"left": 1, "top": 1}

        Label:
            text: "NOT YET\nIMPLEMENTED"
            size_hint: (1, 0.5)
            pos_hint: {"left": 1, "top": 0.75}
        
        Button:
            text: "Menu"
            font_size: 16
            size_hint: (None, None)
            size: (75,25)
            pos_hint: {"left": 1, "bottom": 1}
            on_release: 
                app.root.current = "menu"